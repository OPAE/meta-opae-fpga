+UBOOT_EXTLINUX_KERNEL_IMAGE:default ?= "../${KERNEL_IMAGETYPE}"
+UBOOT_EXTLINUX_FDTDIR:default ?= ".."
+UBOOT_EXTLINUX_ROOT:default ?= "root=/dev/null"
+
+IMAGE_BOOT_FILES ?= " \
+			${UBOOT_BINARY} \
+			Image \
+			socfpga_agilex_n6000.dtb \
+		    "
+
